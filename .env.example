# Environment variables for Book Review Service
# Database
POSTGRES_DB=book-review
POSTGRES_USER=db_user
POSTGRES_PASSWORD=password
POSTGRES_HOST=db
POSTGRES_PORT=5432
DATABASE_URL=postgresql+psycopg2://db_user:password@db:5432/book-review

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://redis:6379/0

# Backend
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
SECRET_KEY=your-very-secret-key

# Frontend
VITE_API_URL=http://backend:8000

# (Optional) Set to 1 to enable debug logging
DEBUG=0
